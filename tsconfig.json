{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "dist",
    "rootDirs": ["."],
    "declaration": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist", "gulpfile.js", "webpack.config.js"]
}